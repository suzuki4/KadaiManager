<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
	<servlet>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>login.LoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>ManagerLoginServlet</servlet-name>
		<servlet-class>login.ManagerLoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ManagerLoginServlet</servlet-name>
		<url-pattern>/managerlogin</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>StudentDataAddServlet</servlet-name>
		<servlet-class>database.StudentDataAddServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>StudentDataAddServlet</servlet-name>
		<url-pattern>/studentAdd</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>StudentDataModifyServlet</servlet-name>
		<servlet-class>database.StudentDataModifyServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>StudentDataModifyServlet</servlet-name>
		<url-pattern>/studentModify</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>StatusDataServlet</servlet-name>
		<servlet-class>database.StatusDataServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>StatusDataServlet</servlet-name>
		<url-pattern>/status</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>CronServlet</servlet-name>
		<servlet-class>cron.CronServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>CronServlet</servlet-name>
		<url-pattern>/cron/*</url-pattern>
	</servlet-mapping>
	<security-constraint>
    <web-resource-collection>
        <url-pattern>/cron/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
        <role-name>admin</role-name>
    </auth-constraint>
	</security-constraint>
	<servlet>
		<servlet-name>ReportForwardServlet</servlet-name>
		<servlet-class>other.ReportForwardServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ReportForwardServlet</servlet-name>
		<url-pattern>/report/*</url-pattern>
	</servlet-mapping>
	<filter>
    	<display-name>EncodingFilter</display-name>
    	<filter-name>EncodingFilter</filter-name>
    	<filter-class>filter.EncodingFilter</filter-class>
    	<init-param>
      		<param-name>encode</param-name>
      		<param-value>Shift_JIS</param-value>
    	</init-param>
  	</filter>
  	<filter-mapping>
    	<filter-name>EncodingFilter</filter-name>
    	<url-pattern>/*</url-pattern>
  	</filter-mapping>
  	<filter>
    	<display-name>ManagerLoginFilter</display-name>
    	<filter-name>ManagerLoginFilter</filter-name>
    	<filter-class>filter.ManagerLoginFilter</filter-class>
  	</filter>
  	<filter-mapping>
    	<filter-name>ManagerLoginFilter</filter-name>
    	<url-pattern>/studentList.jsp</url-pattern>
    	<url-pattern>/add.jsp</url-pattern>
  	</filter-mapping>
  	<session-config>
  		<session-timeout>90</session-timeout>
  	</session-config>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
</web-app>
